{{!
    @template plagiarism_advacheck/plagiarismresult

    Template purpose and description.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
    }
}}
<div class="advacheck-plagiarismresult {{typeid}} {{class}}" >
    <span class="advacheck-value-plag">{{#str}}plagiarism, plagiarism_advacheck{{/str}}</span>
    <span class="plagiarism-{{typeid}}">{{plagiarism}}% </span> 

    <span class="advacheck-value-selfcite">{{#str}}selfcite, plagiarism_advacheck{{/str}}</span>
    <span class="selfcite-{{typeid}}">{{selfcite}}% </span> 

    <span class="advacheck-value-legal">{{#str}}legal, plagiarism_advacheck{{/str}}</span>
    <span class="legal-{{typeid}}">{{legal}}% </span> 

    <span class="advacheck-value-orig">{{#str}}originality, plagiarism_advacheck{{/str}}</span>
    <span class="originality-{{typeid}}">{{originality}}% </span> 

    <a class="advacheck-report-{{typeid}}" target="_blank" title="{{#str}}report, plagiarism_advacheck{{/str}}" href="{{reportlinkhref}}">
         <i class="fa-solid fa-link fa-lg"></i>
    </a> 

    <span class="advacheck-data {{typeid}}">
        <span class="typeid">{{typeid}}</span>
    </span>

    <a class="update_report" title="{{#str}}updatereport, plagiarism_advacheck{{/str}}" href="{{updatereporthref}}">
        <i class="fa-solid fa-retweet fa-lg" ></i>
    </a> 

    {{{downloadcertificate}}} 
    
    <span class="advacheck-suspicious {{typeid}} {{suspicioustoggleclass}}" >
        <a title="{{#str}}suspicious, plagiarism_advacheck{{/str}}" class="advacheck-suspicious_lnk {{typeid}} {{suspicioustoggleclass}}" href="{{suspiciouslnkhref}}">
            <i class="fa-solid fa-triangle-exclamation fa-lg" > </i>
        </a>
    </span>
</div>